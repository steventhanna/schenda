<!-- Load dependencies -->
<% include parts/dependencies.ejs %>
<!-- Load navbar -->
<script src="/js/pages/noteDetails.js"></script>
<link href='http://fonts.googleapis.com/css?family=Roboto+Mono' rel='stylesheet' type='text/css'>

<style type="text/css" media="screen">
    #editor {
        position: absolute;
        height: 75%;
        width: 75%;
        margin-left: 15px;
        margin-right: 0px;
        margin-top: 25px;
        padding-left: 10px;
    }

    .ace_gutter {
      display: none;
    }
</style>

<div id="wrapper">

<!-- Navigation -->
  <% include parts/classNav.ejs %>
  <div id="page-wrapper">
    <div class="container-fluid">

<!-- Page Heading -->
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header" style="color: <%= classroom.color %>">
            <a class="pull-right btn btn-primary" href="#">Edit
              <%= note.name %></a>
            <div class="hidden" id="classId"><%= classroom.cid %></div>
            <div class="hidden" id="noteId"><%= note.nid %></div>
            <%= note.name %>
            <small>-
              <%= note.description %></small>
          </h1>
        </div>
      </div>
      <div class="row">
        <div id="editor"><%= note.body %></div>
      </div>
<!-- /.row -->

    </div>
<!-- /.container-fluid -->

  </div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<!-- Modal -->
<div aria-labelledby="editClassroom" class="modal fade" id="editClassroom" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-label="Close" class="close" data-dismiss="modal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="editClassroom">Edit
          <%= classroom.name %></h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="className">Name</label>
            <input class="form-control" id="className" placeholder="<%= classroom.name %>" style="border-color: <%= classroom.color %>" type="text">
          </div>
          <div class="form-group">
            <label for="color">Color</label>
            <input class="form-control" id="color" placeholder="<%= classroom.color %>" style="border-color: <%= classroom.color %>" type="text">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
        <a class="btn btn-primary" href="#" id="editClassroomButton">Update
          <%= classroom.name %></a>
      </div>
    </div>
  </div>
</div>
<script charset="utf-8" src="/js/src-noconflict/ace.js" type="text/javascript"></script>
<script>
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/tomorrow");
  editor.getSession().setMode("ace/mode/markdown");
  // editor.setGutter(false);
  document.getElementById('editor').style.fontFamily='Roboto Mono';
  document.getElementById('editor').style.fontSize='14px';
  editor.setShowPrintMargin(false);
  editor.getSession().setUseWrapMode(true);
</script>
